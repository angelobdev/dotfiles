{
  // *** Left Modules *** //

  "hyprland/workspaces": {
    "format": "{windows}",
    "format-window-separator": "|",
    "workspace-taskbar": {
      "enable": true,
      "update-active-window": true,
      "format": "{icon}",
      "icon-size": 16
    }
  },

  "clock": {
    "format": " <span font='8' rise='1000'>ÔÄó</span> {:%H:%M}",
    "format-alt": " <span font='9' rise='1000'>ÔÑ≥</span> {:%A - %B %d, %Y (%R)}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "left",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },

  "upower": {
    "icon-size": 12,
    "format-alt": "{percentage}",
    "hide-if-empty": false,
    "tooltip": true,
    "tooltip-spacing": 16
  },

  "group/hardware": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "not-power",
      "transition-left-to-right": true
    },
    "modules": ["temperature", "cpu", "memory", "disk"]
  },

  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon6/temp1_input",
    "format": "<span font='8' rise='1000'>Óº´</span> {temperatureC}¬∞C ",
    "tooltip": false
  },

  "cpu": {
    "interval": 5,
    "format": "<span font='10'>Û∞çõ</span> {usage}% "
  },

  "memory": {
    "interval": 5,
    "format": "<span font='8' rise='1000'>ÓøÖ</span> {percentage}% ",
    "tooltip-format": "{used}GiB / {total}GiB"
  },

  "disk": {
    "interval": 5,
    "format": "<span font='9'>ÔÉá</span> {percentage_used}%",
    "tooltip-format": "{used} / {total}",
    "path": "/"
  },

  // *** Center Modules *** //

  "hyprland/window": {
    "format": "{}",
    "rewrite": {
      "(.*) - (.*) - (.*) Edge": "$1",
      "(.*) - (.*) - Visual Studio Code": "$2/$1"
    },
    "icon": true,
    "icon-size": 14,
    "separate-outputs": true
  },

  // *** RIGHT MODULES *** //

  "group/controls": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "not-power",
      "transition-left-to-right": true
    },
    "modules": [
      "custom/controls-label",
      "custom/silent",
      "power-profiles-daemon",
      "idle_inhibitor"
    ]
  },

  "custom/controls-label": {
    "format": "<span font='10'>ÔåÉ </span>",
    "tooltip": false
  },

  "custom/silent": {
    "format": "<span font='10'>Û∞Çö</span>",
    "format-alt": "<span font='10'>Û∞Çõ</span>",
    "tooltip": false,
    "on-click": "makoctl mode -t do-not-disturb"
  },

  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "<span font='9'>ÔÉß</span>",
      "performance": "<span font='9'>ÔÉß</span>",
      "balanced": "<span font='8' rise='1000'>Ôâé </span>",
      "power-saver": "<span font='10'>ÔÅ¨ </span>"
    }
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "<span font='10'>Û∞õê</span>",
      "deactivated": "<span font='10'>Û∞õë</span>"
    }
  },

  "tray": {
    "icon-size": 14,
    "show-passive-items": true,
    "spacing": 8
  },

  "wireplumber": {
    "format": "<span font='13' rise='-1000'>{icon}</span>",
    "format-muted": "<span font='12' rise='-1000'>Û∞ñÅ</span> Muted",
    "on-click": "exec ~/.config/waybar/scripts/sinkSwitch.sh",
    "format-icons": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"],
    "reverse-scrolling": 1,
    "tooltip-format": "{node_name} / {volume}%"
  },

  "hyprland/language": {
    "format": "{}",
    "format-en": "üá∫üá∏",
    "format-it": "üáÆüáπ",
    "keyboard-name": "at-translated-set-2-keyboard"
  },

  "user": {
    "format": "{user}",
    "interval": -1,
    "icon": false
  },

  "group/power": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 400,
      "children-class": "not-power",
      "transition-left-to-right": false
    },
    "modules": [
      "custom/poweroff",
      "custom/lock",
      "custom/logout",
      "custom/suspend",
      "custom/reboot"
    ]
  },

  "custom/lock": {
    "format": "Lock <span font='8' rise='1000'>ÔÇú</span>",
    "tooltip": false,
    "on-click": "exec ~/.config/waybar/scripts/askPower.sh lock"
  },

  "custom/logout": {
    "format": "Logout <span font='10' rise='0'>ÔÇã</span>",
    "tooltip": false,
    "on-click": "exec ~/.config/waybar/scripts/askPower.sh logout"
  },

  "custom/suspend": {
    "format": "Sleep <span font='10' rise='0'>ÔÜÜ</span>",
    "tooltip": false,
    "on-click": "exec ~/.config/waybar/scripts/askPower.sh sleep"
  },

  "custom/reboot": {
    "format": "Reboot <span font='11'>Û∞úâ</span>",
    "tooltip": false,
    "on-click": "exec ~/.config/waybar/scripts/askPower.sh reboot"
  },

  "custom/poweroff": {
    "format": "<span font='12' rise='-1000'>Û∞ê•</span>",
    "tooltip": false,
    "on-click": "exec ~/.config/waybar/scripts/askPower.sh poweroff"
  }
}
